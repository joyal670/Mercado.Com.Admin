<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/productitemimage"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/loader_png"/>

        <TextView
            android:id="@+id/productitemname"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:gravity="left"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/colorBlack"
            android:text="xxx xxx xxxx"/>
        <TextView
            android:id="@+id/productitemdescription"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="left"
            android:textSize="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textStyle="italic"
            android:text="xx xxx xxx xxx xx"/>

        <TextView
            android:id="@+id/productitemprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xxx"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textColor="@color/colorFabRed"
            />

        <TextView
            android:id="@+id/productitemstoke"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:text="Status"
            android:layout_marginRight="15dp"
            android:textColor="@color/colorBlack"/>


    </LinearLayout>



</com.google.android.material.card.MaterialCardView>