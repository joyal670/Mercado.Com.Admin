<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Old Values"
                android:background="@color/colorgrey"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Product Name"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:id="@+id/productoldname"
                android:background="@drawable/address_style"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:hint="Product Description"
                android:layout_marginTop="15dp"
                android:id="@+id/productolddescription"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/address_style"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Product Price"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:layout_marginLeft="3dp"
                android:id="@+id/productoldprice"
                android:layout_marginRight="3dp"
                android:background="@drawable/address_style"
                android:textColor="@color/colorFabRed"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="New Values"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:background="@color/colorBlue"
                android:gravity="center"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="New Name"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="3dp"
                android:id="@+id/productnewname"
                android:layout_marginRight="3dp"
                android:paddingLeft="10dp"
                android:background="@drawable/address_style"
                android:textColor="@color/colorBlack"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:hint="New Description"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="3dp"
                android:inputType="textMultiLine"
                android:layout_marginRight="3dp"
                android:paddingLeft="10dp"
                android:id="@+id/productnewdescription"
                android:background="@drawable/address_style"
                android:textColor="@color/colorBlack"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="New Price"
                android:layout_marginTop="15dp"
                android:inputType="number"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:paddingLeft="10dp"
                android:id="@+id/productnewprice"
                android:background="@drawable/address_style"
                android:textColor="@color/colorFabRed"/>

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Warning"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_baseline_warning_24"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you provide no values, it will take old values !!!"
        android:textColor="@color/colorFabRed"
        android:layout_marginLeft="10dp"
        android:textStyle="italic" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Cancel"
            android:id="@+id/productviewcancel"
            android:textColor="@color/colorWhite"
            android:background="@color/colorgrey"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@color/colorBlue"
            android:text="Save"
            android:id="@+id/productviewsave"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>


</LinearLayout>